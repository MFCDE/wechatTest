.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  font-family: 'Microsoft YaHei';
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.page-header{
  display: flex;
  /*横向居中对齐*/
  justify-content: center;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 10rpx;
}

.page-header-text{
  padding: 20rpx 40rpx;
  color: #999;
  font-size: 40rpx;
  /*text-align: center;*/
}


